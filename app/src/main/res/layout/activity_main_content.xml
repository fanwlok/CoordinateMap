<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

        <com.fanweilin.coordinatemap.widget.ZoomControlsView
            android:id="@+id/activity_main_zoomcontrols"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="5dp"></com.fanweilin.coordinatemap.widget.ZoomControlsView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/transparent">

            <ImageButton
                android:id="@+id/imgbtn_layer"
                android:layout_width="@dimen/imgbtn"
                android:layout_height="@dimen/imgbtn"
                android:background="@drawable/imagebutton"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_layers_grey600_36dp"
                android:tint="@color/colorPrimary" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_clearall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/card_layer"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/transparent">

            <ImageButton
                android:id="@+id/imgbtn_clearall"
                android:layout_width="@dimen/imgbtn"
                android:layout_height="@dimen/imgbtn"
                android:padding="5dp"
                android:background="@drawable/imagebutton"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_clear_all_grey600_36dp"
                android:tint="@color/colorPrimary" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/card_clearall"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/transparent">

            <ImageButton
                android:id="@+id/imgbtn_mylocation"
                android:layout_width="@dimen/imgbtn"
                android:layout_height="@dimen/imgbtn"
                android:background="@drawable/imagebutton"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_my_location_grey600_36dp"
                android:tint="@color/colorPrimary" />
        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="100dp"
            android:src="@mipmap/ic_place_white_36dp"
            app:fabSize="mini" />
<RelativeLayout
    android:id="@+id/rl_main_gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">
    <Button
        android:id="@+id/btn_main_gone"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/transparent"
        android:textSize="14sp"
        android:text="关闭"
        android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/appx_banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_main_gone"
            ></RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
