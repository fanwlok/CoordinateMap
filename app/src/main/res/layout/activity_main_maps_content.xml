<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.fanweilin.coordinatemap.widget.MyViewPagerHome
        android:id="@+id/vp_maps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_main_center_lng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/iv_main_center"
            android:textColor="@color/white"
            android:text="移动地图"
            android:visibility="gone"
            android:background="@drawable/v4_bg_ballon"/>
        <ImageView
            android:id="@+id/iv_main_center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_target"
            android:scaleType="centerInside"
            android:visibility="gone"
            />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="32dp"
            android:src="@mipmap/people"
            app:fabSize="mini"
            app:elevation="5dp"
            app:backgroundTint="@color/white"
            />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:tint="@color/white"
            app:fabSize="mini"
            android:layout_above="@+id/fab_distance"
            android:src="@mipmap/area"
            app:borderWidth="0dp" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:fabSize="mini"
            android:layout_above="@+id/fab_point"
            android:layout_alignParentLeft="true"
            android:tint="@color/white"
            android:src="@mipmap/ic_ruler"
            app:borderWidth="0dp" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:fabSize="mini"
            android:layout_above="@+id/fab_location"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_place_white_36dp"
            app:borderWidth="0dp" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="60dp"
            android:src="@mipmap/ic_add_white_36dp"
            app:borderWidth="0dp" />
        <android.support.design.widget.FloatingActionButton
            android:visibility="gone"
            android:id="@+id/fab_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="16dp"
            android:src="@mipmap/undo"
            app:fabSize="mini"
            android:layout_above="@+id/fab_sure"
            app:borderWidth="0dp" />
        <android.support.design.widget.FloatingActionButton
            android:visibility="gone"
            android:id="@+id/fab_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="16dp"
            android:src="@mipmap/check"
            app:fabSize="mini"
            android:layout_above="@+id/fab_cancel"
            app:borderWidth="0dp" />
        <android.support.design.widget.FloatingActionButton
            android:visibility="gone"
            android:id="@+id/fab_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="60dp"
            app:fabSize="mini"
            android:tint="@color/white"
            android:src="@mipmap/ic_close_black_36dp"
            app:borderWidth="0dp" />
        <RelativeLayout
            android:id="@+id/rl_main_gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <com.ashokvarma.bottomnavigation.BottomNavigationBar
                android:visibility="gone"
                android:id="@+id/bottom_navigation_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/appx_banner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/rl_main_mappoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_main_mappointAdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/maginparent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/maginparent"
                    android:text="移动地图"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_main_mappointAdress"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_main_cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="@color/colorPrimary" />
                    <Button
                        android:id="@+id/btn_main_pointsave"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:text="存储"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>
            </RelativeLayout>
             </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_area"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <TextView
               android:gravity="center_vertical"
                android:id="@+id/tv_area"
                android:layout_below="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="面积为：0"/>
        </RelativeLayout>
        <ListView
            android:background="@color/white"
            android:layout_alignParentTop="true"
            android:id="@+id/list_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </RelativeLayout>

</LinearLayout>
