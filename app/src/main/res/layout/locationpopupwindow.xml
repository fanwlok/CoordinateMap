<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_wgs"
            android:layout_width="0dp"
            android:layout_height="@dimen/location_popwindow_tv"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/wgs"
            android:textColor="@color/white" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

        </View>

        <TextView
            android:id="@+id/tv_baidu"
            android:layout_width="0dp"
            android:layout_height="@dimen/location_popwindow_tv"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="@string/baidu" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/et_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:background="@null"
        android:editable="false"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="true" />
    <TextView
        android:id="@+id/et_notice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:background="@null"
        android:editable="false"
        android:textSize="14sp"
        android:gravity="center"
        android:selectAllOnFocus="true"
        android:textColor="@android:color/holo_red_light"
        android:textIsSelectable="true" />
</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_latitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="30"
            android:text="WGS84纬度:" />

        <EditText
            android:id="@+id/et_lat_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="@null"
            android:editable="false"
            android:minWidth="50dp"
            android:selectAllOnFocus="true"
            android:text=""
            android:textIsSelectable="true"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_longtitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="30"
            android:text="WGS84经度:" />

        <EditText
            android:id="@+id/et_lon_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="@null"
            android:editable="false"
            android:minWidth="50dp"
            android:selectAllOnFocus="true"
            android:text=""
            android:textIsSelectable="true"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_accuracy_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="30"
            android:text="精度:" />

        <EditText
            android:id="@+id/et_accuracy_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="@null"
            android:editable="false"
            android:minWidth="200dp"
            android:selectAllOnFocus="true"
            android:text=""
            android:textIsSelectable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_altitude_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="30"
            android:text="海拔" />

        <EditText
            android:id="@+id/et_altitude_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="@null"
            android:editable="false"
            android:minWidth="200dp"
            android:selectAllOnFocus="true"
            android:text=""
            android:textIsSelectable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_speed_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="30"
            android:text="速度:" />

        <EditText
            android:id="@+id/et_speed_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="@null"
            android:editable="false"
            android:minWidth="200dp"
            android:selectAllOnFocus="true"
            android:text=""
            android:textIsSelectable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_direction_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="30"
            android:text="方向:" />

        <EditText
            android:id="@+id/et_direction_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="@null"
            android:editable="false"
            android:minWidth="200dp"
            android:selectAllOnFocus="true"
            android:text=""
            android:textIsSelectable="true" />
    </LinearLayout>

